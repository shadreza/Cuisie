<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <TextView
                android:id="@+id/tour_season_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Winter"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintEnd_toStartOf="@+id/tour_stay_time_txt"
                app:layout_constraintTop_toTopOf="@+id/tour_id_txt" />

            <TextView
                android:id="@+id/tour_cost_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25,000 bdt"
                android:textColor="#000"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tour_id_txt"
                app:layout_constraintEnd_toEndOf="@+id/tour_stay_time_txt"
                app:layout_constraintTop_toBottomOf="@+id/tour_stay_time_txt"
                app:layout_constraintVertical_bias="0.631" />

            <TextView
                android:id="@+id/tour_stay_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="2 days (min)"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tour_spot_name_txt" />

            <TextView
                android:id="@+id/tour_location_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="India"
                android:textSize="12sp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="@+id/tour_id_txt"
                app:layout_constraintStart_toStartOf="@+id/tour_spot_name_txt"
                app:layout_constraintTop_toBottomOf="@+id/tour_spot_name_txt" />

            <TextView
                android:id="@+id/tour_spot_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Agra"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tour_id_txt"
                app:layout_constraintTop_toTopOf="@+id/tour_id_txt" />

            <TextView
                android:id="@+id/tour_id_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="bold" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>